import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import CoupAgent
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  PlayerInit initialize_player()'
  print '  void game_begin(CoupGame game, Player player)'
  print '  CounterAction respond_to_action(CoupGame game, Action action)'
  print '  Action take_turn(CoupGame game)'
  print '   select_influences(CoupGame game,  influences, i32 count)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = CoupAgent.Client(protocol)
transport.open()

if cmd == 'initialize_player':
  if len(args) != 0:
    print 'initialize_player requires 0 args'
    sys.exit(1)
  pp.pprint(client.initialize_player())

elif cmd == 'game_begin':
  if len(args) != 2:
    print 'game_begin requires 2 args'
    sys.exit(1)
  pp.pprint(client.game_begin(eval(args[0]),eval(args[1]),))

elif cmd == 'respond_to_action':
  if len(args) != 2:
    print 'respond_to_action requires 2 args'
    sys.exit(1)
  pp.pprint(client.respond_to_action(eval(args[0]),eval(args[1]),))

elif cmd == 'take_turn':
  if len(args) != 1:
    print 'take_turn requires 1 args'
    sys.exit(1)
  pp.pprint(client.take_turn(eval(args[0]),))

elif cmd == 'select_influences':
  if len(args) != 3:
    print 'select_influences requires 3 args'
    sys.exit(1)
  pp.pprint(client.select_influences(eval(args[0]),eval(args[1]),eval(args[2]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
